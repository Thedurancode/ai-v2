run = "python app.py"
language = "python3"
modules = ["python-3.11"]

[[ports]]
localPort = 5018
externalPort = 80

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "gunicorn app:app --bind 0.0.0.0:5018 --timeout 120"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 27576597
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "# Install backend dependencies"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = ""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "# Install frontend dependencies and build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd dura-react"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd .."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = ""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "# Run Flask app"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
